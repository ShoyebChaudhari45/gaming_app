<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- GAME NAME HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/txtGameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="KARNATAKA DAY"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"/>

        </RelativeLayout>

        <!-- TOP DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>

        <!-- OPEN SECTION -->
        <LinearLayout
            android:id="@+id/layoutOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open:"
                    android:textSize="12sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/txtOpenTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOpenStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFEBEE">

                <TextView
                    android:id="@+id/txtOpenStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLOSED"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:fontFamily="sans-serif-medium"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnPlayOpen"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#D32F2F">

                <ImageView
                    android:id="@+id/imgPlayIconOpen"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    app:tint="@android:color/white"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- MIDDLE DIVIDER -->
        <View
            android:id="@+id/dividerMiddle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>

        <!-- CLOSE SECTION -->
        <LinearLayout
            android:id="@+id/layoutClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close:"
                    android:textSize="12sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/txtCloseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00 AM"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCloseStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFEBEE">

                <TextView
                    android:id="@+id/txtCloseStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLOSED"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:fontFamily="sans-serif-medium"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnPlayClose"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#D32F2F">

                <ImageView
                    android:id="@+id/imgPlayIconClose"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    app:tint="@android:color/white"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>