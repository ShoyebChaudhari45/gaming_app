<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <!-- HEADER -->
    <View
        android:id="@+id/viewHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LOGO -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_app_logo"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintTop_toTopOf="@id/viewHeader"
        app:layout_constraintBottom_toBottomOf="@id/viewHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- STRIP -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/strip_bg"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="PROVIDE SECURITY PIN"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        app:layout_constraintTop_toBottomOf="@id/viewHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- âœ… RESET PIN (RESTORED) -->
    <TextView
        android:id="@+id/txtReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset PIN"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- PIN CONTAINER -->
    <LinearLayout
        android:id="@+id/pinContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtReset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View style="@style/PinBox"/>
        <View style="@style/PinBox"/>
        <View style="@style/PinBox"/>
        <View style="@style/PinBox"/>
    </LinearLayout>

    <!-- KEYPAD -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/pinContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn1"
            style="@style/PinKey"
            android:text="1"/>

        <Button
            android:id="@+id/btn2"
            style="@style/PinKey"
            android:text="2"
            app:layout_constraintStart_toEndOf="@id/btn1"/>

        <Button
            android:id="@+id/btn3"
            style="@style/PinKey"
            android:text="3"
            app:layout_constraintStart_toEndOf="@id/btn2"/>

        <Button
            android:id="@+id/btn4"
            style="@style/PinKey"
            android:text="4"
            app:layout_constraintTop_toBottomOf="@id/btn1"/>

        <Button
            android:id="@+id/btn5"
            style="@style/PinKey"
            android:text="5"
            app:layout_constraintTop_toBottomOf="@id/btn2"
            app:layout_constraintStart_toEndOf="@id/btn4"/>

        <Button
            android:id="@+id/btn6"
            style="@style/PinKey"
            android:text="6"
            app:layout_constraintTop_toBottomOf="@id/btn3"
            app:layout_constraintStart_toEndOf="@id/btn5"/>

        <Button
            android:id="@+id/btn7"
            style="@style/PinKey"
            android:text="7"
            app:layout_constraintTop_toBottomOf="@id/btn4"/>

        <Button
            android:id="@+id/btn8"
            style="@style/PinKey"
            android:text="8"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            app:layout_constraintStart_toEndOf="@id/btn7"/>

        <Button
            android:id="@+id/btn9"
            style="@style/PinKey"
            android:text="9"
            app:layout_constraintTop_toBottomOf="@id/btn6"
            app:layout_constraintStart_toEndOf="@id/btn8"/>

        <View
            android:id="@+id/space"
            android:layout_width="@dimen/pin_btn_size"
            android:layout_height="@dimen/pin_btn_size"
            app:layout_constraintTop_toBottomOf="@id/btn7"/>

        <Button
            android:id="@+id/btn0"
            style="@style/PinKey"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@id/btn8"
            app:layout_constraintStart_toEndOf="@id/space"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="@dimen/pin_btn_size"
            android:layout_height="@dimen/pin_btn_size"
            android:layout_margin="10dp"
            android:background="@drawable/bg_keypad_circle"
            android:src="@drawable/ic_delete"
            android:tint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/btn9"
            app:layout_constraintStart_toEndOf="@id/btn0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

