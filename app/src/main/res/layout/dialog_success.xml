<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@drawable/bg_dialog_rounded">

    <!--
        CHANGE 5, 6, 7:
        Replaced static MaterialCardView + ImageView checkmark with a Lottie animation.
        This mimics the SweetAlert2 success animation style (animated green tick).

        Lottie file: res/raw/success_animation.json
        Recommended free JSON: https://assets10.lottiefiles.com/packages/lf20_jbrw3hcz.json
        (Green checkmark success animation â€” download and save as res/raw/success_animation.json)

        Dependency to add in build.gradle (app):
            implementation 'com.airbnb.android:lottie:6.4.0'
    -->

    <!-- Lottie Success Animation (replaces static green circle + checkmark) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieSuccess"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:lottie_rawRes="@raw/success_animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_speed="1.2"/>

    <!-- Success Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Bid Successful!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"/>

    <!-- Message -->
    <TextView
        android:id="@+id/txtSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Your bid has been placed successfully"
        android:textSize="14sp"
        android:textColor="@color/textSecondary"
        android:gravity="center"/>

</LinearLayout>