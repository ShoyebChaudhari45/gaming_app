<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN CONTENT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main">

        <!-- GRADIENT HEADER -->
        <View
            android:id="@+id/viewHeader"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_header_gradient"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- HEADER CONTENT -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="12dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- TOP BAR -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_menu"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    app:tint="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Employee Portal"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

            </RelativeLayout>

            <!-- WELCOME SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Game Management"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Enter bids and manage games"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:alpha="0.9"/>

            </LinearLayout>

            <!-- QUICK ACTIONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center">

                <!-- WhatsApp -->
                <LinearLayout
                    android:id="@+id/btnWhatsApp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_whatsapp"
                            android:scaleType="fitCenter"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Support"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Panel Access -->
                <LinearLayout
                    android:id="@+id/btnPanelAccess"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_star"
                            android:scaleType="fitCenter"
                            app:tint="@color/dark_blue"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Panel"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- EMPLOYEE GAME CONTENT -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/bg_main"
            app:layout_constraintTop_toBottomOf="@id/viewHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- INPUT SECTION HEADER -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="18dp"
                            android:background="@color/dark_blue"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entry Form"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <!-- DIGIT AND POINT INPUTS -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:weightSum="2">

                            <!-- DIGIT INPUT -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Digit"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/textPrimary"
                                    android:layout_marginBottom="6dp"/>

                                <EditText
                                    android:id="@+id/edtDigit"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:background="@drawable/bg_input_field"
                                    android:hint="000"
                                    android:inputType="number"
                                    android:maxLength="3"
                                    android:gravity="center"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/textPrimary"
                                    android:paddingHorizontal="12dp"/>

                            </LinearLayout>

                            <!-- POINT INPUT -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Point"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/textPrimary"
                                    android:layout_marginBottom="6dp"/>

                                <EditText
                                    android:id="@+id/edtPoint"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:background="@drawable/bg_input_field"
                                    android:hint="00"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:gravity="center"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/textPrimary"
                                    android:paddingHorizontal="12dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- GAME BUTTONS SECTION -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="18dp"
                            android:background="@color/dark_blue"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Game Types"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <!-- GAME BUTTONS GRID -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <!-- ROW 1: JODI, OPEN -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnJodi"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="4dp"
                                    android:text="JODI"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:cornerRadius="8dp"
                                    app:backgroundTint="@color/dark_blue"
                                    app:elevation="2dp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnOpen"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="4dp"
                                    android:text="OPEN"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:cornerRadius="8dp"
                                    app:backgroundTint="@color/dark_blue"
                                    app:elevation="2dp"/>

                            </LinearLayout>

                            <!-- ROW 2: CYCLE, PATTE -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnCycle"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="4dp"
                                    android:text="CYCLE"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:cornerRadius="8dp"
                                    app:backgroundTint="@color/dark_blue"
                                    app:elevation="2dp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnPatte"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="4dp"
                                    android:text="PATTE"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:cornerRadius="8dp"
                                    app:backgroundTint="@color/dark_blue"
                                    app:elevation="2dp"/>

                            </LinearLayout>

                            <!-- ROW 3: TP, SP, DP -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnTp"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="4dp"
                                    android:text="TP"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:cornerRadius="8dp"
                                    app:backgroundTint="@color/dark_blue"
                                    app:elevation="2dp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnSp"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="SP"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:cornerRadius="8dp"
                                    app:backgroundTint="@color/dark_blue"
                                    app:elevation="2dp"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnDp"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="4dp"
                                    android:text="DP"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:cornerRadius="8dp"
                                    app:backgroundTint="@color/dark_blue"
                                    app:elevation="2dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- KEYPAD SECTION -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="18dp"
                            android:background="@color/dark_blue"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Number Keypad"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <!-- NUMBER KEYPAD -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <!-- ROW 1: 1, 2, 3 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn1"
                                    style="@style/KeypadButtonemp"
                                    android:layout_marginEnd="4dp"
                                    android:text="1"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn2"
                                    style="@style/KeypadButtonemp"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="2"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn3"
                                    style="@style/KeypadButtonemp"
                                    android:layout_marginStart="4dp"
                                    android:text="3"/>

                            </LinearLayout>

                            <!-- ROW 2: 4, 5, 6 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn4"
                                    style="@style/KeypadButtonemp"
                                    android:layout_marginEnd="4dp"
                                    android:text="4"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn5"
                                    style="@style/KeypadButtonemp"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="5"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn6"
                                    style="@style/KeypadButtonemp"
                                    android:layout_marginStart="4dp"
                                    android:text="6"/>

                            </LinearLayout>

                            <!-- ROW 3: 7, 8, 9 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn7"
                                    style="@style/KeypadButtonemp"
                                    android:layout_marginEnd="4dp"
                                    android:text="7"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn8"
                                    style="@style/KeypadButtonemp"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="8"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn9"
                                    style="@style/KeypadButtonemp"
                                    android:layout_marginStart="4dp"
                                    android:text="9"/>

                            </LinearLayout>

                            <!-- ROW 4: 0, DELETE -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn0"
                                    style="@style/KeypadButton"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="0"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnDelete"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="4dp"
                                    android:text="DEL"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:cornerRadius="8dp"
                                    app:backgroundTint="#E53935"
                                    app:elevation="2dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </ScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- NAVIGATION DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_drawer"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:itemShapeFillColor="@color/nav_item_background"
        app:itemShapeInsetStart="12dp"
        app:itemShapeInsetEnd="12dp"
        app:itemShapeInsetTop="4dp"
        app:itemShapeInsetBottom="4dp"/>

</androidx.drawerlayout.widget.DrawerLayout>