<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <!-- ===== HEADER GRADIENT BACKGROUND ===== -->
    <View
        android:id="@+id/viewHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_header_gradient"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== TOOLBAR ===== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#30FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                app:tint="@android:color/white"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bid History"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/cardBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardBack"
            app:layout_constraintBottom_toBottomOf="@id/cardBack"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="60dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ===== DATE FILTER CARD ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contentCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbarContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Subtitle -->
            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select date range to view your bids"
                android:textColor="#78909C"
                android:textSize="13sp"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp"/>

            <!-- DATE ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- FROM DATE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From Date"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02"/>

                    <TextView
                        android:id="@+id/txtFromDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_date_field"
                        android:gravity="center"
                        android:text="Select Date"
                        android:textColor="#546E7A"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:clickable="true"
                        android:focusable="true"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:drawablePadding="6dp"
                        android:paddingHorizontal="10dp"/>
                </LinearLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"/>

                <!-- TO DATE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Date"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02"/>

                    <TextView
                        android:id="@+id/txtToDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_date_field"
                        android:gravity="center"
                        android:text="Select Date"
                        android:textColor="#546E7A"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:clickable="true"
                        android:focusable="true"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:drawablePadding="6dp"
                        android:paddingHorizontal="10dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- SUBMIT BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:text="View Bid History"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:letterSpacing="0.02"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/dark_blue"
                app:elevation="2dp"
                android:stateListAnimator="@null"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:iconTint="@android:color/white"
                app:iconSize="18dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ===== LOADING INDICATOR ===== -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/dark_blue"
        app:layout_constraintTop_toBottomOf="@id/contentCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== BID HISTORY LIST ===== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBids"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/contentCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== EMPTY STATE ===== -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/contentCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_empty_history"
            android:alpha="0.3"
            app:tint="#78909C"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="No Bids Found"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Select a date range above to view\nyour bid history"
            android:textSize="13sp"
            android:textColor="#78909C"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>