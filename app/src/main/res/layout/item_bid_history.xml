<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TAP NAME CENTERED AT TOP -->
        <TextView
            android:id="@+id/txtTapName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MILAN NIGHT"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>

        <!-- TOP ROW: BID TYPE on left, PRICE & TOTAL badges on right -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- LEFT: BID TYPE -->
            <TextView
                android:id="@+id/txtBidType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jodi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:fontFamily="sans-serif-medium"
                android:drawableStart="@drawable/ic_bid"
                android:drawablePadding="8dp"
                android:drawableTint="#1565C0"/>

            <!-- RIGHT: PRICE & TOTAL BADGES -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <!-- PRICE BADGE -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_price_badge"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bid: ₹"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="2dp"/>
                </LinearLayout>

                <!-- TOTAL BADGE -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_total_badge"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: ₹"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FF6F00"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FF6F00"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="2dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#F0F0F0"/>

        <!-- BOTTOM ROW: VALUE on left, DATE on right -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- INPUT VALUE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value:"
                    android:textSize="15sp"
                    android:textColor="#78909C"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txtInputValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#37474F"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

            <!-- DATE & TIME -->
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06 Feb, 2:50 PM"
                android:textSize="14sp"
                android:textColor="#90A4AE"
                android:fontFamily="sans-serif"
                android:drawableStart="@drawable/ic_calendar_small"
                android:drawablePadding="6dp"
                android:drawableTint="#90A4AE"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>