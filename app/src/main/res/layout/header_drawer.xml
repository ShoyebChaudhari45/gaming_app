<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/bg_header_gradient"
    android:padding="20dp">

    <!-- PROFILE IMAGE -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profileCard"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="3dp"
        app:strokeColor="#40FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_user"
            android:padding="16dp"
            app:tint="@color/colorPrimary"/>

    </com.google.android.material.card.MaterialCardView>

    <!-- PROFILE INFO -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/profileCard"
        app:layout_constraintBottom_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toEndOf="@id/profileCard"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/txtPlayerMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="3214569871"
            android:textColor="@color/dark_blue"
            android:textSize="13sp"
            android:alpha="0.9"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="6dp"
            android:drawableTint="@android:color/white"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#30FFFFFF">

            <TextView
                android:id="@+id/txtviewprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW PROFILE"
                android:textColor="@color/dark_blue"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="4dp"
                android:drawableTint="@android:color/white"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

